{
  "name": "@mission-control/desktop",
  "description": "Mission Control desktop app",
  "homepage": "https://github.com/cocoHMC/mission-control",
  "author": "HMC <dev@hmcf.ca>",
  "private": true,
  "version": "0.1.23",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "pnpm -w build && tsc -p tsconfig.json && electron .",
    "build": "tsc -p tsconfig.json",
    "start": "electron .",
    "dist:mac": "pnpm -w build && pnpm build && electron-builder --mac dmg zip",
    "dist:mac:publish": "pnpm -w build && pnpm build && electron-builder --mac dmg zip --publish always",
    "dist:linux": "pnpm -w build && pnpm build && electron-builder --linux AppImage deb",
    "dist:linux:publish": "pnpm -w build && pnpm build && electron-builder --linux AppImage deb --publish always",
    "dist:win": "pnpm -w build && pnpm build && electron-builder --win nsis",
    "dist:win:publish": "pnpm -w build && pnpm build && electron-builder --win nsis --publish always"
  },
  "dependencies": {
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.30",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.18",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.missioncontrol.desktop",
    "productName": "Mission Control",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/main.js",
      "dist/preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../../.env.example",
        "to": ".env.example"
      },
      {
        "from": "../../openclaw-plugins",
        "to": "openclaw-plugins",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../scripts",
        "to": "scripts",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../pb/pb_migrations",
        "to": "pb/pb_migrations"
      },
      {
        "from": "../../apps/worker/dist/worker.bundle.cjs",
        "to": "worker/worker.bundle.cjs"
      },
      {
        "from": "../../apps/web/.next/standalone",
        "to": "web",
        "filter": [
          "**/*",
          "**/.next/**",
          "**/.pnpm/**"
        ]
      }
      ,
      {
        "from": "../../apps/web/.next/standalone/node_modules/.pnpm",
        "to": "web/node_modules/.pnpm",
        "filter": [
          "**/*"
        ]
      }
    ],
    "afterPack": "build/afterPack.cjs",
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "Mission-Control-v${version}-macos-${arch}.${ext}",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "category": "Utility",
      "artifactName": "Mission-Control-v${version}-linux-${arch}.${ext}",
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "HMC <dev@hmcf.ca>"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "dmg": {
      "artifactName": "Mission-Control-v${version}-macos-${arch}.${ext}"
    },
    "appImage": {
      "artifactName": "Mission-Control-v${version}-linux-${arch}.${ext}"
    },
    "deb": {
      "artifactName": "Mission-Control-v${version}-linux-${arch}.${ext}"
    },
    "nsis": {
      "artifactName": "Mission-Control-v${version}-windows-${arch}-setup.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "cocoHMC",
        "repo": "mission-control",
        "releaseType": "release"
      }
    ]
  }
}
