# Mission Control
MC_BIND_HOST=127.0.0.1
MC_WEB_PORT=4010
MC_WEB_BIND=127.0.0.1
PORT=4010
MC_LEAD_AGENT_ID=main
MC_LEAD_AGENT_NAME="Main (Lead)"
# Deprecated: MC_LEAD_AGENT (use MC_LEAD_AGENT_ID instead)
MC_LEAD_AGENT=main
MC_NOTIFICATION_PREFIX="[Mission Control]"
MC_DELIVER_DEBOUNCE_MS=750
MC_DELIVER_INTERVAL_MS=20000
MC_CIRCUIT_MAX_SENDS_PER_MINUTE=12
MC_CIRCUIT_COOLDOWN_MS=900000

# Basic-auth for the UI (recommended even on tailnet)
MC_ADMIN_USER=admin
MC_ADMIN_PASSWORD=change-me

# PocketBase
PB_URL=http://127.0.0.1:8090
NEXT_PUBLIC_PB_URL=http://127.0.0.1:8090
PB_ADMIN_EMAIL=admin@local.mc
PB_ADMIN_PASSWORD=change-me
PB_SERVICE_EMAIL=service@local.mc
PB_SERVICE_PASSWORD=change-me

# OpenClaw
OPENCLAW_GATEWAY_URL=http://127.0.0.1:18789
# For Docker-on-macOS workers (to reach the host gateway from inside a container):
OPENCLAW_GATEWAY_URL_DOCKER=http://host.docker.internal:18789
# Use a dedicated token if possible. If you must, you can use the existing gateway token.
OPENCLAW_GATEWAY_TOKEN=change-me
OPENCLAW_GATEWAY_DISABLED=false
OPENCLAW_TOOLS_TIMEOUT_MS=10000
OPENCLAW_CONFIG_PATH=
# UI hints only (used to prefill copyable node commands)
MC_GATEWAY_HOST_HINT=
MC_GATEWAY_PORT_HINT=18789
MC_NODE_ACTIONS_ENABLED=false
MC_NODE_HEALTH_CMDS="uname,uptime,df -h"
MC_NODE_HEALTH_CMD_TEMPLATE=
MC_NODE_APPROVE_CMD_TEMPLATE=

# Worker
LEASE_MINUTES=45
MC_STANDUP_HOUR=23
MC_STANDUP_MINUTE=30
MC_NODE_SNAPSHOT_MODE=off
MC_NODE_SNAPSHOT_MINUTES=10
MC_NODE_SNAPSHOT_CMD=
OPENCLAW_CLI=openclaw
MC_HEALTHCHECK_PING=false
WEB_PUSH_ENABLED=false
WEB_PUSH_PUBLIC_KEY=
WEB_PUSH_PRIVATE_KEY=
WEB_PUSH_SUBJECT=mailto:admin@local
MC_PUSH_TTL_MS=30000

# Client hints
NEXT_PUBLIC_MC_LEAD_AGENT_ID=main
NEXT_PUBLIC_MC_LEAD_AGENT_NAME="Main (Lead)"
